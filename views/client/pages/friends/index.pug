extends ../../layouts/default.pug
include ../../mixins/box-head.pug
include ../../mixins/alert.pug
include ../../mixins/friends-section.pug


    block main
        h1 Trang bạn bè
       
        .container
            a(href='/friends/request') Lời mời kết bạn (#{user.requestFriend.length})
            a(href='/friends/list') Danh sách bạn bè
            a(href='/friends/request-sent') Đã gửi
        .container
            each profile in users
                .profile-card
                    img(
                        src=profile.avatar 
                        alt=profile.full_name
                    )
                    .info(id=profile.id)
                        h3= profile.full_name 
                        button.add-friend Thêm bạn bè 
                        button.request-send(
                            style="display: none;"
                        ) Đã gửi
                        button.delete-people Gỡ
    block script
        script(src="socket.io/socket.io.js")
        script(src="../js/socket.js")
        script(src="../js/friends.js")