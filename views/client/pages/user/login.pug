extends ../../layouts/auth.pug
//-include ../../mixins/alert.pug


block main

  //- +alert-success(3000)
  //- +alert-fail(5000)
  .container
    .row.justify-content-center
      .col-md-6
        .card.mt-5
          .card-body
            ul.nav.nav-tabs.mb-4#authTabs(role="tablist")
              li.nav-item(role="presentation")
                button.nav-link.active#login-tab(data-bs-toggle="tab" data-bs-target="#login" type="button" role="tab") Đăng nhập
              li.nav-item(role="presentation")
                button.nav-link#register-tab(data-bs-toggle="tab" data-bs-target="#register" type="button" role="tab") Đăng ký

            .tab-content
              #login.tab-pane.fade.show.active(role="tabpanel")
                h3.mt-5.mb-4.text-center Đăng nhập
                form(
                  action=`/user/login`
                  id="login-form"
                  method="POST"
                  class="form-login"
                )
                  .mb-3
                    label.form-label(for="email") Email
                    input.form-control#email(
                      type="email"
                      name="email"
                      required
                      autofocus
                    )
                  .mb-3
                    label.form-label(for="password") Mật khẩu
                    .input-group
                      input.form-control#password(
                        type="password"
                        name="password"
                        required
                      )
                  .mb-3.form-check
                    input.form-check-input#remember-me(type="checkbox" name="remember")
                    label.form-check-label(for="remember-me") Ghi nhớ đăng nhập
                  .d-grid.gap-2
                    button.btn.btn-primary(type="submit") Đăng nhập
                  .text-center.mt-3
                    a(href="/user/password/forgot") Quên mật khẩu?

              #register.tab-pane.fade(role="tabpanel")
                h3.mt-5.mb-4.text-center Đăng ký
                form(
                  action=`/user/register`
                  id="register-form"
                  method="POST"
                  class="form-register"
                )
                  .mb-3
                    label.form-label(for="register-fullname") Họ và tên
                    input.form-control#register-fullname(
                      type="text"
                      name="full_name"
                      required
                    )
                  .mb-3
                    label.form-label(for="register-email") Email
                    input.form-control#register-email(
                      type="email"
                      name="email"
                      required
                    )
                  .mb-3
                    label.form-label(for="register-password") Mật khẩu
                    .input-group
                      input.form-control#register-password(
                        type="password"
                        name="password"
                        required
                      )
                  .mb-3
                    label.form-label(for="register-confirm-password") Xác nhận mật khẩu
                    input.form-control#register-confirm-password(
                      type="password"
                      name="confirm_password"
                      required
                    )
                  .d-grid.gap-2
                    button.btn.btn-success(type="submit") Đăng ký
