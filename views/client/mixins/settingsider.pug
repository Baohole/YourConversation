mixin settingsider(user)
    aside.sidebar.profilesider.hidden(role='complementary' aria-label='Chat sidebar')
            .container
                .header
                    span.back-arrow
                        i.fa-solid.fa-arrow-left
                    h2 Edit profile
                .profile-picture
                    label(for='avatar')
                        .picture-icon
                            i.fa-solid.fa-camera
                        img.preview-avatar.hidden(src='./Wallpaper Telegram.jpg' alt='Baor')
                    input#avatar.hidden(type='file' accept='image/*')
                form.profile-form
                    .form-group
                        label(for='first-name') First name
                        input#first-name(type='text' value='Viết')
                    .form-group
                        label(for='last-name') Last name
                        input#last-name(type='text' value='Bảo')
                    .form-group
                        label(for='bio') Bio
                        textarea#bio(rows='3')
                        span.char-limit 70
                    .form-group
                        label(for='username') Username
                        input#username(type='text' value='vietbao2810')
                .btn-bar
                    a(href='') &Dstrok;&#x1ED5;i m&#x1EAD;t kh&#x1EA9;u
                    button.change-profile Thay &dstrok;&#x1ED5;i
                    
    aside.sidebar.settingsider.hidden(role='complementary' aria-label='Thông tin đoạn chat')
        .header
            span.back-arrow
                i.fa-solid.fa-arrow-left
            h2 Setting
            .actions
                span.edit
                    i.fa-solid.fa-pencil
                span.options
                    i.fas.fa-ellipsis-v
        .user-inner
            .user-info
                .info
                    span.username Viet Bao
                    span.status.online online
            .user-contact-info
                ul
                    li
                        i.fa-regular.fa-envelope
                        .contact-info
                            .contact bao.hole@hcmut.edu.vn
                            .type email
                    li
                        i.fa-solid.fa-phone
                        .contact-info
                            .contact 0949347806
                            .type phone
                    li
                        i.fa-solid.fa-at
                        .contact-info
                            .contact @bao.hole
                            .type username
